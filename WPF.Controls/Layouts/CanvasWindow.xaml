<Window x:Class="Layouts.CanvasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts" mc:Ignorable="d"
        Title="CanvasWindow" Height="450" Width="800">
    <Canvas Height="400" Width="400" Background="Black" HorizontalAlignment="Right">
        <Canvas Height="100" Width="100" Top="0" Left="0" Background="Red"/>
        <Canvas Height="50" Width="100" Top="100" Left="100" Background="Green"/>
        <Canvas Height="100" Width="100" Top="50" Left="50" Background="Blue" Panel.ZIndex="1"/>
        <Rectangle Height="100" Width="100" Canvas.Bottom="150" Canvas.Right="0" Fill="Coral"/>
    </Canvas>
</Window>
